<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="module.video.jnc.myffmpeg.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <Button
                android:id="@+id/camera_ffmpeg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="camera_ffmpeg" />
            <Button
                android:id="@+id/decode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="decode" />

            <Button
                android:id="@+id/bt_encode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="编码" />

            <Button
                android:id="@+id/stream"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="推流" />

            <Button
                android:id="@+id/encode_yuv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="编码yuv" />

            <Button
                android:id="@+id/bt_sdl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sdl"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="水印" />

            <Button
                android:id="@+id/bt_transcoding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="转码" />

            <Button
                android:id="@+id/bt_swscale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="swscale" />

            <Button
                android:id="@+id/bt_muxer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="视音频分离复用" />

            <Button
                android:id="@+id/bt_opengl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="opengl" />

            <Button
                android:id="@+id/bt_opengl_texure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="opengl纹理" />


            <Button
                android:id="@+id/eglcamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="eglcamera" />

            <Button
                android:id="@+id/ffmpeg_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ffmpeg_camera" />


            <Button
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test" />
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
