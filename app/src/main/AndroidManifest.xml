<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="module.video.jnc.myffmpeg">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DecodeMP4Activity" />
        <activity android:name=".StreamActivity" />
        <activity android:name=".EncodeActivity" />
        <activity android:name=".EncodeYuvActivity" />
        <activity android:name=".MySDLActivity" />
        <activity
            android:name=".SDLActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity
            android:name=".AddFilterActivity"
            android:label="@string/title_activity_add_filter"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SwscaleActivity" />
        <activity android:name=".MuxerActivity"></activity>
    </application>

</manifest>